        main() {
            declare Integer countdown = 60;
            declare lastCheckTime = Now;
            while(True) {
                yield;
                if (Now - lastCheckTime > 1000 && countdown > 0) {
                    countdown -= 1;
                    lastCheckTime = Now; 
                } 
                if(countdown <= 0) {
                    countdown = 60;
                    log(System.ExtraTool_Info);
                    TriggerPageAction("opcontrol.toolinfo," ^ TL::URLEncode(System.ExtraTool_Info));
                }
            }
        }
    -->
